# Aria
ARIA_PORT=6800
ARIA_SECRET=secret
ARIA_SESSION_FILE=./aria.session.gz
#ARIA_CONF=$XDG_CONFIG_HOME/aria2/aria2.conf
ARIA_CONF=./aria2.conf
ARIA_SAVE_INTERVAL_SECONDS=60

# Status
STATUS_NETWORK_INTERFACE=eth0
STATUS_DISK_PARTITION=/dev/sda1
