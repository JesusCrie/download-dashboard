PORT=8000

# Auth
## Password to authenticate someone
AUTH_JWT_PASSWORD=SomePassword
## Secret to create the token
AUTH_JWT_SECRET=123456789
AUTH_JWT_ALG=HS256
## Default token lifespan in zeit/ms
AUTH_JWT_LIFESPAN=1h
AUTH_JWT_LIFESPAN_REFRESH=7d

# Redis
REDIS_UNIX_SOCKET=
REDIS_HOST=
REDIS_PORT=6379
REDIS_URL=
REDIS_DB=
